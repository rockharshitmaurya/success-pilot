<div class="container-fluid mt-5 contact-style" id="contactid">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact Us</h1>
            <p class="text-center sub-heading">We will be happy to help You</p>
            <div class="row">
 <div class="col-md-6 col-12 mx-auto">
 <form action="/contact" method="POST">

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" required name="name">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" required name="email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="phone">Phone Number</label>
    <input type="tel" class="form-control" id="phone" required name="phone">
  </div>
  <div class="form-group">
    <label for="message">Message</label>
    <textarea class="form-control" id="message" rows="3" required name="message"></textarea>
  </div>
  <button type="submit" class="btn-style btn-primary">Submit</button>
</form>
</div>

            </div>
        </div>
    </div>
</div>